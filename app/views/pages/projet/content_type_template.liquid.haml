---
title: Content type template

# true if the page is included in the menu
listed: true

# true if the page is published
published: true

# position among sibling pages
# position: 1

# sets a redirection to the given url (301)
# redirect_url: "<url to a page or to a remote url>"

# content type that this page is templatizing
content_type: projets

# editable_elements:
#   'some_block/some_slug': "<text>"
#   'some_block/some_slug': "<relative path to the file under the public/samples folder>"
---
{% extends 'index' %}

{% block main %}
.l-container
  .container--projet
    .article__title
      %h1
        {{projet.name}}
    #owl-example.owl-carousel
      
      {% for option in projet.diapos %}
      .picture--projet
        %img{ :src => "{{option.image.url}}"}
      {% endfor %}
    .article__description__projet
      %p.center
        {{projet.description}}
    .article__techno
      %p.center 
        %span 
          techno utilis√© :
        {{projet.listTechno}}
      %p.center
        {% if projet.link %}
        {{projet.labelSection}} :
        %a.link{ href:"{{projet.link}}",target:"_blank"} {{projet.name}}
        {% endif %}
  .clear

{% endblock %}